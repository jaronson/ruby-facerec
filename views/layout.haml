!!! 5
%html
  %head
    %title Facial Recognition with Ruby and OpenCV
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' }
    %link{ rel: 'stylesheet', type: 'text/css', href: 'http://slidifylibraries2.googlecode.com/git/inst/libraries/widgets/bootstrap/css/bootstrap.css' }
    %link{ rel: 'stylesheet', type: 'text/css', href: 'css/solarized_light.css' }
    %link{ rel: 'stylesheet', type: 'text/css', href: 'js/bower_components/reveal.js/css/reveal.css' }
    %link{ rel: 'stylesheet', type: 'text/css', href: 'js/bower_components/reveal.js/css/theme/simple.css', id: 'theme' }
    %link{ rel: 'stylesheet', type: 'text/css', href: 'css/styles.css' }
%body
  = yield

  %script{ type: 'text/javascript', src: 'js/bower_components/jquery/dist/jquery.min.js' }
  %script{ type: 'text/javascript', src: 'js/bower_components/reveal.js/js/reveal.js' }
  %script{ type: 'text/javascript', src: 'http://slidifylibraries2.googlecode.com/git/inst/libraries/highlighters/highlight.js/highlight.pack.js' }

  :javascript
    hljs.initHighlightingOnLoad();

    Reveal.initialize({
      width: 1200,
      height: '100%',
      controls: true,
      progress: false,
      history:  true,
      center:   false,
      theme:    'simple'
    });

    $.each($('pre'), function(i, e){
      var h = $('.slides').height() - 100;
      $(e).height(h);
      $(e).find('code').height(h);
    });
